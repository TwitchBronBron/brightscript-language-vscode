{
    "comments": {
        "lineComment": "'"
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "<",
            ">"
        ]
    ],
    "autoClosingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "<",
            ">"
        ]
    ],
    "folding": {
        "offSide": true,
        "markers": {
            "start": "^(i?\\s*'\\s*#region(\\s+.*)?)$",
            "end": "^(i?\\s*'\\s*#endregion(\\s*.*)?)$"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "(((^|[=,(])\\s*\\b(if|else|elseif|for|while|function|sub)\\b((?!\\b(end|then)\\b).)*)|(\\bthen\\b\\s*)|({\\s*))$",
        "decreaseIndentPattern": "(\\b(endif|endfor|endwhile|endsub|endfunction)\\b)|((\\bend\\s+(if|for|while|sub|function)\\b))|}"
    }
}
