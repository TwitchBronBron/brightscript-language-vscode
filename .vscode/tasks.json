{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "npm",
            "label": "npm",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "args": [
                "run",
                "watch",
                "--loglevel",
                "silent"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "shell",
            "label": "test",
            "command": "npm",
            "args": [
                "run",
                "test",
                "--loglevel",
                "silent"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "npm",
            "script": "clean",
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "label": "build",
            "script": "build",
            "dependsOn": "clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "npm",
            "script": "test:coverage",
            "problemMatcher": []
        }
    ]
}